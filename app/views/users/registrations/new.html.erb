<div class="container">

  <div class="container" style="text-align: -moz-left">
    <h2>Sign up</h2>
    ________________
  </div>
  <br>
  <div class="container">
    <%=

      form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">First Name
          <%= f.text_field :first_name, placeholder: "First Name", :size=>"40" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">Last Name
          <%= f.text_field :last_name, placeholder: "Last Name", :size=>"40"  %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">Email
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40"  %>
        </div>
      </div>


      <div class="form-group row">
        <div class="col-sm-2 col-form-label">Password
          <%= f.password_field :password, autocomplete: "new-password", :size=>"40"  %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">Password Confirmation
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"40"  %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container" style="text-align: center">

    <%= link_to "Back", :back %>

  </div>
</div>