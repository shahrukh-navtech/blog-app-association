<h2>Actor Name: <%= @actor.name %></h2>

<h2>Description:</h2> <%= @actor.description %>


<h3><%= link_to "Comments", actor_comments_path(@actor) %></h3>
<% @actor.comments.each_with_index do |comment, index | %>
  <table>
    <tr>
      <td><%= index+1 %>. </td>
      <td><%= comment.body %></td>
    </tr>
  </table>
<% end %>

<%= render partial: "comments/form", locals: {commentable: @actor} %>