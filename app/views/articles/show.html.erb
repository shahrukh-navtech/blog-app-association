<div align="center">

<h1>Article View</h1>

<div class="container">
<table class="table table-hover">
	<caption>Article Data</caption>
<thead class="thead-dark">
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Content</th>
		<th>URL</th>
		<th></th>
	</tr>
</thead>
		<td><%= @article.title %></td>
		<td><%= @article.author.first_name %></td>
		<td><%= @article.body %></td>
		<td><%= @article.url %></td>
		<td><%= link_to 'Edit', edit_article_path(params[:id]) %>
			<%= link_to 'DELETE', article_path(@article.id), method: :delete, data: { confirm: "Are You sure to Delete \"#{@article.title}\""} %> 
		</td>

</table>
</div>

<br>
<%= link_to 'Show all Articles', articles_path %>
<br><br>
<%= link_to 'Back to Home', root_path %>

</div>